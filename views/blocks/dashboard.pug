extends ../template 

block content
    section#dashboard
        h3.dashboard-title #{user.username}
        - var userProfileImage = user.profileImageLocation + user.profileImage
        img(src= userProfileImage)

    section#friend-activity
        h4.dashboard-title Latest from your friends
        each friend in user.friends
            - var userURL = "/user-profile/" + friend.id + "?auth=true"
            a(href= userURL).dashboard-card
                h5 #{friend.name}
                p #{friend.latestMessages[0].message}
                p: i #{friend.latestMessages[0].timestamp}

    section#group-activity
        h4.dashboard-title Latest from your groups
        each group in user.groups
            - var groupURL = "/group-profile/" + group.id + "?auth=true"
            a(href= groupURL).dashboard-card
                h5 #{group.name}
                p #{group.latestNews[0].message}
                p: i #{group.latestNews[0].timestamp}

    section#account-options
            h5.dashboard-title Account Options
            a(href="") 
                p Manage Friends
            a(href="") 
                p Manage Groups
            a(href="") 
                p Change Info
            a(href="") 
                p Privacy Settings